<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4F806F"
        tools:context=".Diary">
    <include
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:id="@id/recipe_toolbar1"
            layout="@layout/activity_searchable"
    />


    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/recipe_add"
            android:theme="@style/floating_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
    <ScrollView
            android:layout_below="@id/recipe_toolbar1"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/card"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="20dp"
                android:weightSum="4">
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/script1"/>
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/script2"/>
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/script1"/>
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/script2"/>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
