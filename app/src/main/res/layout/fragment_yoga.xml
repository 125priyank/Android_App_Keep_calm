<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/constraintLayout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#4F806F"
                                             tools:context=".ui.main.PlaceholderFragment">

    <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"/>

    <ScrollView
            android:id="@+id/mainScrollView"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#D54F806F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
    <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:elevation="20dp"
                app:cardCornerRadius="30dp"
                android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content"
                          android:background="@drawable/gradient_blue"
                          android:orientation="horizontal" android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="50dp" android:layout_height="match_parent"
                        android:src="@drawable/ic_menu_yoga_white"/>
                <TextView
                        android:textColor="#FFFF"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Meditaion"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:weightSum="2">
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/asana3"/>
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/asana4"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:elevation="20dp"
                app:cardCornerRadius="30dp"
                android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content"
                          android:background="@drawable/gradient_blue"
                          android:orientation="horizontal" android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="50dp" android:layout_height="match_parent"
                        android:src="@drawable/ic_menu_yoga_white"/>
                <TextView
                        android:textColor="#FFFF"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Asanas"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:weightSum="2">
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/asana1"/>
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/asana2"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>