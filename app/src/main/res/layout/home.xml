<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:id="@+id/waste"
            android:background="@drawable/gradient_purple"
    />
    <!--580dp-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/waste"
            android:background="#D54F806F"
            android:layout_width="match_parent" android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:elevation="20dp"
                app:cardCornerRadius="30dp"
                android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content"
                          android:background="@drawable/gradient_blue"
                          android:orientation="horizontal" android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="50dp" android:layout_height="match_parent"
                        android:src="@drawable/ic_menu_yoga_white"/>
                <TextView
                        android:textColor="#FFFF"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Good Morning"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:background="@drawable/gradient_card"
                android:layout_height="120dp">
            <LinearLayout

                    android:id="@+id/cardHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:weightSum="2">
            <android.support.v7.widget.CardView
                    app:cardCornerRadius="30dp"
                    android:elevation="20dp"
                    android:layout_margin="15dp"
                    android:foreground="@drawable/script1"
                    android:layout_width="200dp"
                    android:layout_height="match_parent">
            </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        app:cardCornerRadius="30dp"
                        android:elevation="20dp"
                        android:foreground="@drawable/script2"
                        android:layout_margin="15dp"
                        android:layout_width="200dp"
                        android:layout_height="match_parent">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        app:cardCornerRadius="30dp"
                        android:elevation="20dp"
                        android:foreground="@drawable/script1"
                        android:layout_margin="15dp"
                        android:layout_width="200dp"
                        android:layout_height="match_parent">
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
                android:background="@drawable/gradient_card"
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:weightSum="2">
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/scene1"/>
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/scene2"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:elevation="20dp"
                app:cardCornerRadius="30dp"
                android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content"
                          android:background="@drawable/gradient_blue"
                          android:orientation="horizontal" android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="50dp" android:layout_height="match_parent"
                        android:src="@drawable/ic_menu_yoga_white"/>
                <TextView
                        android:textColor="#FFFF"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Exercise"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
                android:background="#4F806F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:weightSum="2">
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/scene3"/>
            <android.support.v7.widget.CardView
                    android:elevation="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:foreground="@drawable/scene4"/>
        </LinearLayout>
        <LinearLayout
                android:background="#4F806F"
                android:layout_width="match_parent" android:layout_height="100dp"
                android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</RelativeLayout>